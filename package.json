{
    "name": "bdd-power-tools",
    "displayName": "BDD-Power-Tools",
    "description": "Autocompletion, syntax highlighting for .feature-files and stepdefinitions",
    "version": "1.0.0-semantically-released",
    "keywords": [
      "gherkin",
      "cucumber",
      "bdd"
    ],
    "author": "Christoph Murczek <christoph.murczek@iteratec.at>",
    "contributors": [

    ],
    "license": "MIT",
    "publisher": "iteratec-gmbh",
    "main": "./client/out/extension",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:gherkin"
    ],
    "contributes": {
        "configuration": {
            "title": "BDD-Power-Tools Configuration",
            "type": "object",
            "properties": {
                "bddPowerTools.featureGlob": {
                    "scope": "resource",
                    "type": "string",
                    "default": "features/**/*.feature",
                    "description": "A glob specifying the feature files in this workspace."
                }
            }
        },
        "languages": [
            {
                "id": "gherkin",
                "aliases": [
                    "Gherkin",
                    "gherkin"
                ],
                "extensions": [
                    ".feature"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gherkin",
                "scopeName": "text.cucumber.gherkin",
                "path": "./syntaxes/gherkin.tmLanguage.json"
            }
        ]
    },
    "dependencies": {},
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/chai-as-promised": "^7.1.0",
        "@types/mocha": "^5.2.5",
        "@types/node": "^8.0.0",
        "@commitlint/cli": "^7.0.0",
        "@commitlint/config-conventional": "^7.0.1",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "commitizen": "^2.10.1",
        "cpx": "^1.5.0",
        "cz-conventional-changelog": "^2.1.0",
        "ghooks": "^2.0.4",
        "mocha": "^5.2.0",
        "semantic-release": "^15.9.3",
        "ts-node": "^7.0.1",
        "typescript": "^3.0.3",
        "tslint": "^5.11.0"
    },
    "scripts": {
        "build": "npm run build:client && npm run build:server",
        "build:client": "tsc -p client/tsconfig.json",
        "build:server": "tsc -p server/tsconfig.json",
        "watch:client": "tsc -w -p client/tsconfig.json",
        "watch:server": "tsc -w -p server/tsconfig.json",
        "postinstall": "cd ./client && npm i && cd ../server && npm i && cd ..",
        "commit": "git-cz",
        "test": "mocha -r chai -r chai-as-promised -r ts-node/register **/*.spec.ts"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        },
        "ghooks": {
            "commit-msg": "commitlint -e"
        }
    }
}
