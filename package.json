{
    "name": "gherkin",
    "displayName": "Gherkin Language support",
    "description": "Language server for Cucumber/Gherkin specs",
    "version": "1.0.0-semantically-released",
    "publisher": "iteratec-gmbh",
    "main": "src/client/extension",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:gherkin"
    ],
    "contributes": {
        "languages": [
            {
                "id": "gherkin",
                "aliases": [
                    "Gherkin",
                    "gherkin"
                ],
                "extensions": [
                    ".feature"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "gherkin",
                "scopeName": "text.cucumber.gherkin",
                "path": "./syntaxes/gherkin.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "vscode": "^1.1.18"
    },
    "devDependencies": {
        "@types/chai": "^4.1.4",
        "@types/chai-as-promised": "^7.1.0",
        "@types/mocha": "^5.2.5",
        "@types/node": "^8.0.0",
        "@commitlint/cli": "^7.0.0",
        "@commitlint/config-conventional": "^7.0.1",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "commitizen": "^2.10.1",
        "cpx": "^1.5.0",
        "cz-conventional-changelog": "^2.1.0",
        "ghooks": "^2.0.4",
        "mocha": "^5.2.0",
        "semantic-release": "^15.9.3",
        "ts-node": "^7.0.1",
        "typescript": "^3.0.1",
        "tslint": "^5.11.0"
    },
    "scripts": {
        "build": "npm run build:client",
        "build:client": "tsc --build --clean",
        "postbuild": "cpx package.json dist/ && cpx package-lock.json dist/",
        "commit": "git-cz",
        "test": "mocha -r chai -r chai-as-promised -r ts-node/register src/**/*.spec.ts"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        },
        "ghooks": {
            "commit-msg": "commitlint -e"
        }
    }
}
